@model IEnumerable<InventoryManagemantSystem.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
    @Html.ActionLink("Create New","Create",new {},new {@class ="btn btn-primary"})
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Product ID")
            </th>
            <th>
                @Html.DisplayName("Product Name")
            </th>
            <th>
                @Html.DisplayName("Product Quantity")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                 @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductQnty)
            </td>
            <td>
                    @Html.ActionLink("Edit","Edit",new {id=item.Id},new {@class ="btn btn-outline-primary"}) |
                    @Html.ActionLink("Details","Details",new {id=item.Id},new {@class ="btn btn-outline-success"}) |
                    @Html.ActionLink("Delete","Delete",new {id=item.Id},new {@class ="btn btn-outline-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
