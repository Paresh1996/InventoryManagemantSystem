@model InventoryManagemantSystem.Models.Purchase

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Purchase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PurchaseProd" class="control-label"></label>
                <input asp-for="PurchaseProd" class="form-control" />
                <span asp-validation-for="PurchaseProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseQnty" class="control-label"></label>
                <input asp-for="PurchaseQnty" class="form-control" />
                <span asp-validation-for="PurchaseQnty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseDate" class="control-label"></label>
                <input asp-for="PurchaseDate" class="form-control" />
                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" /> |
                @Html.ActionLink("Cancel","Index",new {},new {@class ="btn btn-outline-dark"})
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
